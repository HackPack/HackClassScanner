{
    "name": "hackpack/hack-class-scanner",
    "description": "Recursively scan a directory for hack classes and/or interfaces",
    "license": "MIT",
    "type": "library",
    "keywords": ["hack", "hhvm", "scan", "ClassScanner", "autoload"],
    "authors": [
        {
            "name": "Isaac Leinweber",
            "email": "brotchen@gmail.com",
            "role": "Author"
        }
    ],
    "minimum-stability" : "dev",
    "require-dev": {
        "hackpack/hackunit": "dev-0.4-dev"
    },
    "autoload": {
        "psr-4": {
            "HackPack\\Scanner\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HackPack\\Scanner\\Tests\\" : "tests/"
        }
    }
}
